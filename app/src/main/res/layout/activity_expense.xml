<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/lavendar">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ADD NEW EXPENSE"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="605dp"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="621dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutamount"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/lavendar"
                android:hint="Amount"
                android:textColorHint="@color/white"
                android:inputType="number"
                android:textColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/amount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/lavendar"
                    android:inputType="phone"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutdate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/lavendar"
                android:hint="@string/date"
                android:textColorHint="@color/white"
                android:inputType="date"
                android:textColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/lavendar"
                    android:drawableRight="@drawable/calendar1"
                    android:textColor="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/expense_type"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:autofillHints="category"
                android:spinnerMode="dropdown"
                android:background="@drawable/lavendar"
                android:contentDescription="expense category"
                android:drawableRight="@drawable/dropdown" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutnote"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/lavendar"
                android:hint="note"
                android:textColorHint="@color/white"
                android:inputType="textLongMessage"
                android:textColor="@color/white" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/note"
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_height="match_parent"
                    android:background="@drawable/lavendar"/>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/add_expense"
                style="button_primary"
                android:layout_width="165dp"
                android:layout_height="46dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="90dp"
                android:backgroundTint="#9C27B0"
                android:gravity="center"
                android:text="add_expense" />

         </LinearLayout>
    </LinearLayout>
</RelativeLayout>