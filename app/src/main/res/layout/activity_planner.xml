<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/lavendar" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Planner"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="605dp"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/expense_type"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="70dp"
            android:contentDescription="expense category"
            android:drawableRight="@drawable/dropdown"
            android:background="@drawable/lavendar"
            android:spinnerMode="dropdown"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutYear"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/lavendar"
            android:hint="Date"
            android:inputType="date"
            android:textColor="@color/white"
            android:textColorHint="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/plannerDate"
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:background="@drawable/lavendar"
                android:drawableEnd="@drawable/date_day"
                android:textColor="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutBudgetLimit"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="19dp"
            android:background="@drawable/lavendar"
            android:hint="Amount"
            android:textColorHint="@color/white"
            android:inputType="time"
            android:textColor="@color/white" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/plannerAmount"
                android:layout_width="290dp"
                android:inputType="phone"
                android:layout_height="match_parent"
                android:background="@drawable/lavendar"
                android:textColor="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/add_planner"
            style="button_primary"
            android:layout_width="163dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="190dp"
            android:backgroundTint="#9C27B0"
            android:gravity="center"
            android:text="ADD PLANNER"
            android:textColorHint="@color/white" />

    </LinearLayout>
</RelativeLayout>